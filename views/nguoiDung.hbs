<div class="uk-child-width-1-2" uk-grid style="margin-left:0px;background-color:aquamarine">
    <div class="uk-width-1-2 uk-align-center" style="margin-top: 38px;">
        <p class="uk-h4">{{thongBao}}</p>
    </div>
    <div class="uk-width-1-2 uk-align-center" style="padding-right: 25px;">
        <form class="uk-search uk-width-1-1" method="POST" action="/layout/timKiemNguoiDung">
            <span class="uk-search-icon-flip uk-padding-small" type="submit" uk-search-icon></span>
            <input class="uk-search-input uk-padding-small" name="hoTen" placeholder="Nhập tên người dùng"
                type="search">
            {{!-- <button type="submit">Tìm kiếm</button> --}}
        </form>
    </div>
</div>
<div class="uk-child-width-1-1@s uk-grid-match" uk-grid>
    {{#each DS}}
    <div>
        <div class="uk-card uk-card-hover uk-card-default uk-padding-small">
            <div class="uk-child-width-1-1@s" uk-grid>
                <div class="uk-width-1-4@m uk-text-center">
                    {{#if this.avatar}}
                        <img src="{{this.avatar}}" style="width: 150px; height:150px; border-radius: 100px;">
                    {{else}}
                    <img src="https://static.yeah1.com/uploads/editors/27/2020/03/21/JaZBMzV14fzRI4vBWG8jymplSUGSGgimkqtJakOV.jpeg"
                            style="width: 150px; height:150px; border-radius: 100px;">
                    {{/if}}
                </div>
                <div class="uk-width-3-4@m uk-text-left uk-child-width-1-1@s" uk-grid>
                    <div class="uk-text-bold uk-width-5-6">
                        <div class="uk-text-lead uk-text-hover uk-card-title" >
                            {{this.hoTen}}
                        </div>
                        <div class="">
                            Số điện thoại: 0{{this.soDienThoai}}
                        </div>
                        {{#if this.gioiTinh}}
                        <div class="">Giới tính: Nam</div>
                        {{else}}
                        <div class="">Giới tính: Nữ</div>
                        {{/if}}
                    </div>
                    <div class="uk-width-1-6 uk-text-top uk-text-right">
                        <a href="" uk-icon="icon: more-vertical"></a>
                        <div uk-dropdown="pos: bottom-right">
                            <ul class="uk-nav uk-dropdown-nav uk-text-left">
                                <li><a href="/layout/xoaNguoiDung/{{nguoiDung._id}}">Xóa người dùng</a></li>
                                <li><a href="/layout/nguoiDungChiTiet/{{this._id}}">Xem thông tin chi tiết</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
