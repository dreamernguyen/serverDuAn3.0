<div class="uk-tile uk-tile-primary uk-padding-small">
    <p class="uk-h4">Mặt hàng chi tiết</p>
</div>
<div class="uk-child-width-1-1@s uk-grid-match" uk-grid>
    <div class="uk-width-1-3@m">
        <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slider="center: true">
            <ul class="uk-slider-items uk-grid">
                {{#each matHangCT.linkAnh}}
                <li class="uk-width-3-4">
                    <div class="uk-panel">
                        <img src="{{this}}" alt="">
                        <div class="uk-position-center uk-panel">
                    </div>
                </li>
                {{/each}}
            </ul>
            <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous
                uk-slider-item="previous"></a>
            <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next
                uk-slider-item="next"></a>
        </div>
    </div>
    <div class="uk-width-2-3@m uk-padding-remove">
        <div class="uk-card-title uk-text-bold uk-text-emphasis uk-padding-small"><a href="/layout/nguoiDungChiTiet/{{matHangCT.idNguoiDung._id}}">{{matHangCT.idNguoiDung.hoTen}}</a></div>
        <div class="uk-text-bold uk-text-emphasis uk-padding-small">{{matHangCT.tieuDe}}</div>
        <div class="uk-text-danger uk-text-bold uk-padding-small">Giá Bán: {{matHangCT.giaBan}} đồng</div>
        <div class="uk-padding-small">Địa chỉ: {{matHangCT.diaChi}}</div>
        <div class="uk-padding-small">Thời Gian: {{ngayDang}}</div>
    </div>
    <hr />
    <div class="" uk-grid>
        <div class="uk-child-width-1-3@m" uk-grid uk-lightbox="animation: slide">
            {{#each matHangCT.linkAnh}}
            <div>
                <a class="uk-inline" href="{{this}}">
                    <img src="{{this}}" alt="">
                </a>
            </div>
            {{/each}}
        </div> 
    </div>
    <hr/>
    <div>
        <div class="uk-tile uk-padding-small uk-text-bold">
            <p class="uk-h4">Mô tả sản phẩm</p>
        </div>
        <div class="uk-padding-small">
            {{matHangCT.moTa}}
        </div>
    </div>
    <div>
        <table class="uk-table uk-table-hover uk-table-divider">
            <thead>
                <tr>
                    <th>Số thứ tự</th>
                    <th class="uk-text-left">Người Báo Cáo</th>
                    <th>Nội Dung Báo Cáo</th>
                </tr>
            </thead>
            {{#each dsBaoCao}}
            <tbody>
                <tr>
                    <td class="">{{inc @index}}</td>
                    <td class="uk-text-left">{{this.idNguoiDung.hoTen}}</td>
                    <td>{{this.noiDung}}</td>
                </tr>
            </tbody>
            {{/each}}
        </table>
    </div>
    
    <div class="uk-child-width-1-1@s uk-grid-center">
        {{#if matHangCT.daDuyet}}
        <a class="uk-button uk-button-primary uk-width-1-2@m" style="margin-Bottom: 30px"
            href="/layout/duyetBai/{{matHangCT._id}}" hidden>Duyệt mặt hàng</a>
        {{else}}
        <a class="uk-button uk-button-primary uk-width-1-2@m" style="margin-Bottom: 30px"
            href="/layout/duyetBai/{{matHangCT._id}}">Duyệt mặt hàng</a>
        {{/if}}
        {{#if matHangCT.daXoa}}
        <a class="uk-button uk-button-primary uk-width-1-1@m" style="margin-Bottom: 30px"
            href="/layout/khoiPhucMatHang/{{matHangCT._id}}">Khôi phục mặt hàng</a>
        {{else}}
        <a class="uk-button uk-button-danger uk-width-1-2@m" style="margin-Bottom: 30px"
            href="/layout/xoaMatHang/{{matHangCT._id}}">Chặn mặt hàng</a>
        {{/if}}
    </div>   
</div>
