<div class="uk-tile uk-tile-primary uk-padding-small">
    <p class="uk-h4">{{thongBao}}</p>
</div>
<div uk-grid>
    <div class="uk-child-width-1-1@s uk-grid-match uk-width-1-2@m" uk-grid>
        <div>
            <div class="uk-card  uk-card-body">
                {{!-- <tile> --}}
                    <div class="" uk-grid>
                        {{#if baiViet.idNguoiDung.avatar}}
                        <div class="uk-width-1-6" uk-lightbox="animation: fade">
                            <a class="uk-inline" href="{{baiViet.idNguoiDung.avatar}}">
                                <img src="{{baiViet.idNguoiDung.avatar}}"
                                    style="width:50px; height: 50px; border-radius: 100px; max-height:50px; max-width:50px; overflow:hidden;">
                            </a>
                        </div>
                        {{else}}
                        <div class="uk-width-1-6" uk-lightbox="animation: fade">
                            <a class="uk-inline"
                                href="https://static.yeah1.com/uploads/editors/27/2020/03/21/JaZBMzV14fzRI4vBWG8jymplSUGSGgimkqtJakOV.jpeg">
                                <img style="width:50px; height: 50px; border-radius: 100px; max-height:50px; max-width:50px; overflow:hidden;"
                                    src="https://static.yeah1.com/uploads/editors/27/2020/03/21/JaZBMzV14fzRI4vBWG8jymplSUGSGgimkqtJakOV.jpeg">
                            </a>
                        </div>
                        {{/if}}
                        <div class="uk-width-5-6 ">
                            <a class="uk-text-bold"
                                href="/layout/nguoiDungChiTiet/{{baiViet.idNguoiDung._id}}">{{baiViet.idNguoiDung.hoTen}}</a>
                            {{#if baiViet.trangThai}}
                            <div>Công khai</div>
                            {{else}}
                            <div>Chỉ mình tôi</div>
                            {{/if}}
                        </div>
                    </div>
                    {{!--
                </tile> --}}
                {{!-- <noidung> --}}
                    <p>
                        {{baiViet.noiDung}}
                    </p>
                    {{!--
                </noidung> --}}
                {{!-- <slideshow> --}}
                    {{#if baiViet.linkAnh}}
                    <div class="uk-child-width-1-1@m" uk-grid uk-lightbox="animation: fade" uk-slideshow="animation: fade">
                        <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1">
                            <ul class="uk-slideshow-items">
                                {{#each baiViet.linkAnh}}
                                <li>
                                    <a class="uk-inline" href="{{this}}">
                                        <img src="{{this}}" alt="" style="height: 350px; width: 500px;  object-fit: cover;  ">
                                    </a>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                    {{else}}
                    <div class="uk-child-width-1-1@m" uk-grid uk-lightbox="animation: fade" uk-slideshow="animation: fade">
                        <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1">
                            <ul class="uk-slideshow-items">
                                {{#each baiViet.linkAnh}}
                                <li>
                                    <a class="uk-inline" href="{{this}}">
                                        <img src="{{this}}" alt="" style="height: 0px; width: 0px;  object-fit: cover;  ">
                                    </a>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{!--
                </slideshow> --}}
                <div class="uk-text-center" uk-grid>
                    <div class="uk-width-1-2 uk-inline-clip uk-transition-toggle " style="color: red">
                        <a href="" uk-icon="icon: heart"></a> {{baiViet.luotThich.length}}
                    </div>
                    <div class="uk-width-1-2" style="color: blue">
                        <a href="" uk-icon="icon: commenting"></a> {{dsBinhLuan.length}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="uk-width-1-2@m uk-padding-small">
        <table class="uk-table uk-table-hover uk-table-divider">
            <thead>
                <tr>
                    <th>Số thứ tự</th>
                    <th class="uk-text-center">Người Báo Cáo</th>
                    <th>Nội Dung Báo Cáo</th>
                </tr>
            </thead>
            {{#each dsBaoCao}}
            <tbody>
                <tr>
                    <td class="uk-text-center">{{inc @index}}</td>
                    <td class="uk-text-center"><a href="/layout/nguoiDungChiTiet/{{this.idNguoiDung._id}}">{{this.idNguoiDung.hoTen}}</a></td>
                    <td>{{this.noiDung}}</td>
                </tr>
            </tbody>
            {{/each}}
        </table>
        <div class="uk-width-1-1" uk-grid>
            <idv class="uk-width-1-2 uk-text-center">
                <a class="uk-button uk-button-danger " href="/layout/khoiPhucBaiViet/{{baiViet._id}}">Bỏ qua báo cáo</a>
            </idv>
            <idv class="uk-width-1-2">
                <a class="uk-button uk-button-primary" href="/layout/xoaBaiViet/{{baiViet._id}}">Gỡ bài</a>
            </idv>
        </div>
    </div>
    <script>

    </script>
</div>  